doctype html
html(lang="en")
  head
    title="淘宝交易分析软件后台"
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
  body
  if msg
    div.alert.alert-danger.alert-dismissable.text-center #{msg}

  .container(style='margin-top:60px')
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title
            strong 管理员登录
        .panel-body
          form(role='form',method='post',action="/admin/dologin")
            .form-group
              label(for='loginname') 帐号
              input#loginname.form-control(type='text',name='loginname', placeholder='登录名')
            .form-group
              label(for='pwd')
                | 密码
                a(href='#') (忘记密码)
              input#pwd.form-control(type='password', name='pwd',placeholder='密码')
            button.btn.btn-sm.btn-default(type='submit') 登录
